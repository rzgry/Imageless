{
    "manifest_version": 2,

    "name": "Imageless",
    "description": "A extension that uses the Clarifai API to block images based on user inputted words",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
      "scripts": ["background.js"]
     },

    "permissions": [
          "storage"
    ],

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["jquery-1.12.1.min.js", "scroll-startstop.events.jquery.js", "keys.js", "content.js" ]
    }
  ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
