{
    "manifest_version": 2,

    "name": "Imageless",
    "description": "A extension that uses the Clarifai API to block images based on user inputted words",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
          "storage"
    ],

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"]
    }
  ],


    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
